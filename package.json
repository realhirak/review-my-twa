{
  "name": "review-my-twa",
  "version": "1.0.0",
  "description": "Custom in-app review popup for Trusted Web Activities (TWA)",
  "main": "dist/review-my-pwa.js",                // Global usage
  "module": "src/index.js",                       // For ESM import
  "exports": {
    "import": "./src/index.js",
    "require": "./dist/review-my-pwa.js"
  },
  "scripts": {
    "build": "esbuild src/index.js --bundle --minify --outfile=dist/review-my-pwa.js --format=iife --global-name=ReviewMyTWA",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/realhirak/review-my-twa.git"
  },
  "keywords": [
    "twa",
    "pwa",
    "review",
    "popup",
    "in-app"
  ],
  "author": "Hirak",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/realhirak/review-my-twa/issues"
  },
  "homepage": "https://github.com/realhirak/review-my-twa#readme",
  "devDependencies": {
    "esbuild": "^0.25.8"
  }
}
